@page
@model Event.Pages.AddEvent
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "AddEvent";
}

<div>
    <div class="form-wrapper" id="add-event">
    <h1 id="heading">Add an Event</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Event.Category"></label>
            <input asp-for="Event.Category" class="form-control" />
            <span asp-validation-for="Event.Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Event.Description"></label>
            <input asp-for="Event.Description" class="form-control" />
            <span asp-validation-for="Event.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Event.Location"></label>
            <input asp-for="Event.Location" class="form-control" />
            <span asp-validation-for="Event.Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Event.Date"></label>
            <input asp-for="Event.Date" class="form-control" />
            <span asp-validation-for="Event.Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Event.Organizer"></label>
            <input asp-for="Event.Organizer" class="form-control" />
            <span asp-validation-for="Event.Organizer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="file" name="CoverImage" class="form-control" />
            <span asp-validation-for="Event.Organizer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="file" name="EventImages" multiple class="form-control" />
            <span asp-validation-for="Event.Organizer" class="text-danger"></span>
        </div>
        <div id="create-event">
            <button type="submit" class="btn btn-success">Create</button>
        </div> 
    </form>
</div>
</div>
